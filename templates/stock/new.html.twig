{% extends 'base.html.twig' %}

{% block pagetitle %} Add product to stock {% endblock %}


{% block main %}
    <form method="post" action="{{ path('stock_store') }}">
        <label>
            SKU:
            <input name="sku" type="text" maxlength="255">
        </label>

        <label>
            Branch:
            <input name="branch" type="text" maxlength="3">
        </label>

        <label>
            Stock:
            <input name="stock" type="number">
        </label>

        <button type="submit">Add/Update</button>
    </form>
{% endblock %}